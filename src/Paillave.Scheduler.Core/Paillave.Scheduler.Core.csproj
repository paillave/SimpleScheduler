<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Paillave.Scheduler.Core</PackageId>
    <Version>1.0.1-beta</Version>
    <Authors>St√©phane Royer</Authors>
    <Company></Company>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/paillave/SimpleScheduler</PackageProjectUrl>
    <PackageTags>.net core scheduler</PackageTags>
    <Product>ETL.net scheduler</Product>
    <Description>.Net library to Schedule events</Description>
    <LangVersion>latest</LangVersion>
    <PackageIcon>NugetIcon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath=""/>
    <None Include="../NugetIcon.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="cronos" Version="0.7.1" allowedVersions="0.7.1"/>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
  </ItemGroup>

</Project>
